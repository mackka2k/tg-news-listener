# === TELEGRAM API ===
# Get from https://my.telegram.org/auth
API_ID=your_api_id
API_HASH=your_api_hash

# === CHANNELS ===
# Source channels (comma-separated)
SOURCE_CHANNELS=@channel1,@channel2,@channel3

# Target channel (where to forward)
TARGET_CHANNEL=@your_channel

# === FILTERS ===
# Maximum posts per day
MAX_POSTS_PER_DAY=5

# Keywords - set to _DISABLED_ to forward all messages (except spam)
# Or specify keywords: AI,news,breaking,important
KEYWORDS=_DISABLED_

# Anti-spam keywords - messages with these will be rejected
SPAM_KEYWORDS=реклама,купить,скидка,промокод,казино,ставки,заработок,криптовалюта бесплатно,подписывайтесь,розыгрыш

# === PATHS ===
# Database path (SQLite)
DATABASE_PATH=data/bot.db

# Log file path
LOG_FILE=logs/bot.log

# === AI (Optional) ===
# Groq API key for AI hashtag generation
# Get from https://console.groq.com/
GROQ_API_KEY=your_groq_api_key

# === MONITORING (Optional) ===
# Sentry DSN for error tracking
SENTRY_DSN=

# Prometheus metrics port
METRICS_PORT=8080

# Environment (development/production)
ENVIRONMENT=development

# Log level (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# === REVIEW MODE (Optional - Currently Disabled) ===
# Uncomment to enable review mode with buttons
# BOT_TOKEN=your_bot_token
# REVIEW_CHANNEL_ID=your_chat_id_or_channel
